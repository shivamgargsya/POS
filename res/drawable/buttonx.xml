<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        
        <shape>
            <gradient
                android:startColor="#faedda"
                android:endColor="#d1473a"
                android:angle="270" />
            
            <corners
                android:radius="0dp" />
            <padding
                android:left="8dp"
                android:top="10dp"
                android:right="8dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#e2d3b7"
                android:endColor="#988462"
                android:angle="270" />
            <stroke 
                android:color="#5a3022"
                android:width="1dp"/>
            <corners
                android:radius="0dp" />
            <padding
                android:left="8dp"
                android:top="10dp"
                android:right="8dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>