<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    

    <TextView
        android:id="@+id/c_order_no"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:text="Order no"
         android:textAppearance="?android:attr/textAppearanceMedium"  />
    
    <TextView
        android:id="@+id/c_date"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:text="Date"
         android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/c_table_no"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:text="Table No"
         android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/c_customer_name"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:text="Customer Name"
         android:textAppearance="?android:attr/textAppearanceMedium" />

   

    <TextView
        android:id="@+id/c_waiter_name"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:text="Waiter name"
         android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/c_total_amount"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:text="Total amount"
         android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/c_payment_mode"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:text="Payment mode"
         android:textAppearance="?android:attr/textAppearanceMedium" />
     <TextView
        android:id="@+id/status"
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:text="Paid"
         android:textAppearance="?android:attr/textAppearanceMedium" />



</LinearLayout>
